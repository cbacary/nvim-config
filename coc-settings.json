{
    "suggest.completeFunctionsCalls": false,
    "typescript.suggest.completeFunctionCalls": false,
    "javascript.suggest.completeFunctionCalls": false,
    "suggest.enableSignatureHelp": false,
    "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls-cache"
        },
        "client": {
            "snippetSupport": true
        },
        "completion": {
            "placeholder": false
        }
      }
    },
    "python.pythonPath": "~/python_conda.sh",
    "python.linting.enabled": true,
    "python.linting.pylint": true,
    "inlayHint.enable": true,
    "python.formatting.provider": "black",
    "python.linting.pylintArgs": ["--disable=E0401,E0402,E1101"],
    "coc.source.buffer.enable": true,
    "coc.source.path.enable": true,
    "coc.source.file.enable": true,
    "coc.source.snippet.enable": true
}
