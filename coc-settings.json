{
  "python.pythonPath": "~/python_conda.sh",
  "tsserver.npm": "/home/cbac/.nvm/versions/node/v19.7.0/bin/npm",
  "python.linting.enabled": true,
  "inlayHint.enable": true,
  "pyright.enable": true,
  "pyright.inlayHints.functionReturnTypes": true,
  "python.formatting.provider": "black",
  "semanticTokens.enable": true,
  "semanticTokens.highlightPriority": 1,
  "python.linting.pylintArgs": ["--disable=E0401,E0402,E1101"],
  "coc.source.buffer.enable": true,
  "coc.source.file.enable": true,
  "signature.enable": true,
  "snippets.triggerCharacters": ["(", ")", "{", "}", "<", ">", ","],
  "signature.hideOnTextChange": false,
  "signature.floatConfig": {
    "border": true,
    "maxWidth": 400,
    "shadow": true,
    "rounded": true
  },
  "suggest.floatConfig": {
    "border": true,
    "maxWidth": 400,
    "shadow": true,
    "rounded": true
  },
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls-cache"
        },
        "client": {
          "snippetSupport": true
        },
        "completion": {
          "placeholder": false
        }
      }
    }
  },
  "coc.preferences.formatOnSave": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "typescript",
    "typescriptreact",
    "prisma"
  ]
}
