{
  "languageserver": {
      "ccls": {
	  "command": "ccls",
	  "filetypes": ["c", "cpp", "cuda", "objc", "objcpp", "c++"],
	  "rootPatterns": [".ccls-root", "compile_commands.json"],
	  "initializationOptions": {
	      "cache": {
		  "directory": ".ccls-cache"
	      },
	      "client": {
		  "snippetSupport": true
	      },
	      "index": {
		  "onChange": true
	      },
	      "highlight": {"lsRanges": true}
	  }
      }
  }
}
